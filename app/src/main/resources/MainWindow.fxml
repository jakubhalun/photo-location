<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.web.WebView?>
<GridPane
        xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="pl.halun.tools.photo.location.MainWindowController"
        alignment="CENTER"
        hgap="10"
        vgap="10"
>

    <!-- Define column constraints -->
    <columnConstraints>
        <ColumnConstraints percentWidth="50"/>
        <ColumnConstraints percentWidth="50"/>
    </columnConstraints>

    <!-- Define row constraints -->
    <rowConstraints>
        <RowConstraints percentHeight="40"/>
        <RowConstraints percentHeight="50"/>
        <RowConstraints percentHeight="10"/>
    </rowConstraints>

    <!-- TextArea for JPEG -->
    <TextArea
            fx:id="jpegInputArea"
            wrapText="true"
            editable="false"
            style="-fx-border-color: lightgray;"
            onDragOver="#onJpegDragOver"
            onDragDropped="#onJpegDrop"
            GridPane.rowIndex="0"
            GridPane.columnIndex="0"
            GridPane.columnSpan="1"
            GridPane.rowSpan="1"
    >
        Drag and drop JPEG file for EXIF
    </TextArea>

    <!-- TextArea for KML -->
    <TextArea
            fx:id="kmlInputArea"
            wrapText="true"
            editable="false"
            style="-fx-border-color: lightgray;"
            onDragOver="#onKmlDragOver"
            onDragDropped="#onKmlDrop"
            GridPane.rowIndex="0"
            GridPane.columnIndex="1"
            GridPane.columnSpan="1"
            GridPane.rowSpan="1"
    >
        Drag and drop KML file
    </TextArea>

    <WebView
            fx:id="outputWebView"
            style="-fx-border-color: lightgray;"
            GridPane.rowIndex="1"
            GridPane.columnIndex="0"
            GridPane.columnSpan="2"
            GridPane.rowSpan="1"
            maxWidth="Infinity"
            maxHeight="Infinity"
            prefWidth="400"
            prefHeight="200"
    />

    <Pane fx:id="comboBoxContainer"
          GridPane.rowIndex="2"
          GridPane.columnIndex="0"
          GridPane.columnSpan="2"
          GridPane.rowSpan="1">
        <padding>
            <Insets top="0" right="0" bottom="0" left="25"/>
        </padding>
        <ComboBox fx:id="timeZoneOffsetComboBox"
                  value="+00:00"
                  items="${controller.timeZoneOffsets}"
                  onAction="#handleComboBoxChange">
        </ComboBox>
    </Pane>

</GridPane>
